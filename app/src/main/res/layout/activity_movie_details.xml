                    android:layout_height="wrap_content"
                    android:text="test"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/data10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/data11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
